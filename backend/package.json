{
  "name": "kb-backend",
  "version": "0.1.0",
  "description": "Find the best place to visit",
  "author": "piotr.westphal@gmail.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:us": "nest build",
    "build:dc": "nest build data-collector",
    "build:sqm": "nest build search-queue-manager",
    "build:src": "nest build search-result-calculator",
    "build:sra": "nest build search-result-aggregator",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:us": "nest start",
    "start:dc": "nest start data-collector",
    "start:sqm": "nest start search-queue-manager",
    "start:src": "nest start search-result-calculator",
    "start:sra": "nest start search-result-aggregator",
    "start:watch:us": "nest start --watch",
    "start:watch:dc": "nest start data-collector --watch",
    "start:watch:sqm": "nest start search-queue-manager --watch",
    "start:watch:src": "nest start search-result-calculator --watch",
    "start:watch:sra": "nest start search-result-aggregator --watch",
    "start:debug:us": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "e2e:dc": "jest --config apps/data-collector/test/jest-e2e.js"
  },
  "dependencies": {
    "@google-cloud/firestore": "4.11.1",
    "@google-cloud/storage": "5.8.5",
    "@hapi/joi": "17.1.1",
    "@nestjs/axios": "0.0.1",
    "@nestjs/common": "8.0.6",
    "@nestjs/core": "8.0.6",
    "@nestjs/microservices": "8.0.6",
    "@nestjs/mongoose": "8.0.1",
    "@nestjs/platform-express": "8.0.6",
    "@nestjs/schedule": "1.0.1",
    "amqp-connection-manager": "3.2.1",
    "amqplib": "0.7.1",
    "cassandra-driver": "4.6.1",
    "mongoose": "5.12.15",
    "puppeteer": "10.2.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.3.0",
    "winston": "3.3.3",
    "winston-daily-rotate-file": "4.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.8",
    "@nestjs/schematics": "7.3.1",
    "@nestjs/testing": "8.0.6",
    "@types/express": "4.17.11",
    "@types/hapi__joi": "17.1.6",
    "@types/jest": "26.0.22",
    "@types/node": "14.14.37",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "eslint": "7.23.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "supertest": "6.1.3",
    "ts-jest": "26.5.4",
    "ts-loader": "8.1.0",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@kb/model/(.*)": "<rootDir>/libs/model/src/$1",
      "@kb/model": "<rootDir>/libs/model/src",
      "@kb/config/(.*)": "<rootDir>/libs/config/src/$1",
      "@kb/config": "<rootDir>/libs/config/src",
      "@kb/rabbit/(.*)": "<rootDir>/libs/rabbit/src/$1",
      "@kb/rabbit": "<rootDir>/libs/rabbit/src",
      "@kb/mongo/(.*)": "<rootDir>/libs/mongo/src/$1",
      "@kb/mongo": "<rootDir>/libs/mongo/src",
      "@kb/util/(.*)": "<rootDir>/libs/util/src/$1",
      "@kb/util": "<rootDir>/libs/util/src",
      "@kb/logger/(.*)": "<rootDir>/libs/logger/src/$1",
      "@kb/logger": "<rootDir>/libs/logger/src",
      "@kb/firestore/(.*)": "<rootDir>/libs/firestore/src/$1",
      "@kb/firestore": "<rootDir>/libs/firestore/src",
      "@kb/cassandra/(.*)": "<rootDir>/libs/cassandra/src/$1",
      "@kb/cassandra": "<rootDir>/libs/cassandra/src",
      "@kb/storage/(.*)": "<rootDir>/libs/storage/src/$1",
      "@kb/storage": "<rootDir>/libs/storage/src"
    }
  }
}
