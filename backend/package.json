{
  "name": "kb-backend",
  "version": "0.1.0",
  "description": "Find the best place to visit",
  "author": "piotr.westphal@gmail.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:us": "nest build",
    "build:dc": "nest build data-collector",
    "build:sqm": "nest build search-queue-manager",
    "build:src": "nest build search-result-calculator",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:us": "nest start",
    "start:dc": "nest start data-collector",
    "start:sqm": "nest start search-queue-manager",
    "start:src": "nest start search-result-calculator",
    "start:watch:us": "nest start --watch",
    "start:watch:dc": "nest start data-collector --watch",
    "start:watch:sqm": "nest start search-queue-manager --watch",
    "start:watch:src": "nest start search-result-calculator --watch",
    "start:debug:us": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/user-service/test/jest-e2e.json"
  },
  "dependencies": {
    "@google-cloud/firestore": "4.8.1",
    "@hapi/joi": "17.1.1",
    "@nestjs/common": "7.6.5",
    "@nestjs/core": "7.6.5",
    "@nestjs/microservices": "7.6.5",
    "@nestjs/mongoose": "7.2.1",
    "@nestjs/platform-express": "7.6.5",
    "@nestjs/schedule": "0.4.1",
    "amqp-connection-manager": "3.2.1",
    "amqplib": "0.6.0",
    "cache-manager": "3.4.0",
    "humio-winston": "1.0.6",
    "mongoose": "5.11.11",
    "puppeteer": "5.5.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.3",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.4",
    "@nestjs/schematics": "7.2.6",
    "@nestjs/testing": "7.6.5",
    "@types/express": "4.17.11",
    "@types/hapi__joi": "17.1.6",
    "@types/jest": "26.0.20",
    "@types/mongoose": "5.10.3",
    "@types/puppeteer": "5.4.2",
    "@types/node": "14.14.20",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.14",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@kb/model/(.*)": "<rootDir>/libs/model/src/$1",
      "@kb/model": "<rootDir>/libs/model/src",
      "@kb/config/(.*)": "<rootDir>/libs/config/src/$1",
      "@kb/config": "<rootDir>/libs/config/src",
      "@kb/rabbit/(.*)": "<rootDir>/libs/rabbit/src/$1",
      "@kb/rabbit": "<rootDir>/libs/rabbit/src",
      "@kb/mongo/(.*)": "<rootDir>/libs/mongo/src/$1",
      "@kb/mongo": "<rootDir>/libs/mongo/src",
      "@kb/util/(.*)": "<rootDir>/libs/util/src/$1",
      "@kb/util": "<rootDir>/libs/util/src",
      "@kb/logger/(.*)": "<rootDir>/libs/logger/src/$1",
      "@kb/logger": "<rootDir>/libs/logger/src",
      "@kb/firestore/(.*)": "<rootDir>/libs/firestore/src/$1",
      "@kb/firestore": "<rootDir>/libs/firestore/src"
    }
  }
}
