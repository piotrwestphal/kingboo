{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "paths": {
      "@kb/model": [
        "libs/model/src"
      ],
      "@kb/model/*": [
        "libs/model/src/*"
      ],
      "@kb/config": [
        "libs/config/src"
      ],
      "@kb/config/*": [
        "libs/config/src/*"
      ],
      "@kb/rabbit": [
        "libs/rabbit/src"
      ],
      "@kb/rabbit/*": [
        "libs/rabbit/src/*"
      ],
      "@kb/mongo": [
        "libs/mongo/src"
      ],
      "@kb/mongo/*": [
        "libs/mongo/src/*"
      ],
      "@kb/util": [
        "libs/util/src"
      ],
      "@kb/util/*": [
        "libs/util/src/*"
      ],
      "@kb/logger": [
        "libs/logger/src"
      ],
      "@kb/logger/*": [
        "libs/logger/src/*"
      ],
      "@kb/firestore": [
        "libs/firestore/src"
      ],
      "@kb/firestore/*": [
        "libs/firestore/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
